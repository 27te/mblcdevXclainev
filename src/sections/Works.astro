---
import { TrendingUp } from "@lucide/astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

interface Props {
  title: string;
  area: string;
  time: string;
  views: string;
  desktop: string;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { title, area, time, views, desktop }: Props = Astro.props;
---

<section class="container mx-auto">
  <div
    class="flex justify-center items-center overflow-hidden rounded-md shadow-xl"
  >
    <img
      src={desktop}
      alt="test"
      class="h-full aspect-auto hover:scale-110 transition-transform duration-300 cursor-grab mix-blend-multiply"
      draggable="false"
    />
  </div>
  <div
    class="flex flex-col md:flex-row justify-between items-center gap-5 w-full my-5 px-5"
  >
    <div class="flex justify-start">
      <h2
        class="text-2xl md:text-4xl font-semibold text-center font-inter text-title"
      >
        {title}
      </h2>
    </div>
    <div class="flex justify-center flex-wrap">
      <ul class="flex justify-center items-center gap-5">
        <li class="flex flex-col font-inter">
          <span class="text-accent">{t("work.area")}</span>
          <p class="text-xl font-medium text-subtitle">{area}</p>
        </li>
        <li class="flex flex-col font-inter">
          <span class="text-accent">{t("work.time")}</span>
          <p class="text-xl font-medium text-subtitle">{time}</p>
        </li>
        <li class="flex flex-col font-inter">
          <span class="text-accent">{t("work.views")}</span>
          <p
            class="text-xl font-medium flex justify-center items-center gap-1 text-subtitle"
          >
            {views}
            <TrendingUp class="text-tertiary" />
          </p>
        </li>
      </ul>
    </div>
  </div>
</section>
