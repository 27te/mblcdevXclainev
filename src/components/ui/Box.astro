---
interface Props {
  className?: string;
  text: string;
  title: string;
  image: string;
}
const { className, text, title, image } = Astro.props;
---

<div
  class={`group bg-gradient-to-br to-secondary from-transparent shadow-xl overflow-hidden rounded-md h-96 w-full border border-black/20 p-4 ${className}`}
>
  <h3 class="text-2xl font-array font-bold uppercase">
    {title}
  </h3>
  <p class="font-inter text-base">
    {text}
  </p>
  <div class="relative w-full h-64 mt-10 overflow-hidden">
    <img
      src={image}
      alt="imagen"
      class="group-hover:scale-110 transition-transform duration-500 w-full h-full object-contain opacity-50"
    />
  </div>
</div>
