---
interface Props {
  className?: string;
  text: string;
  title: string;
}
const { className, text, title } = Astro.props;
---

<div class={`w-full p-4 ${className}`}>
  <div>
    <slot name="icon" />
  </div>
  <h3 class="text-xl font-inter font-semibold">
    {title}
  </h3>
  <p class="text-base font-medium text-secondary/70">
    {text}
  </p>
</div>
