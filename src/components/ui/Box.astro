---
interface Props {
  className?: string;
  text: string;
  title: string;
}
const { className, text, title } = Astro.props;
---

<div
  class={`group bg-secondary shadow-xl overflow-hidden rounded-md h-96 w-full p-4 ${className}`}
>
  <h3 class="text-2xl font-nanum font-bold uppercase">
    {title}
  </h3>
  <p class="font-inter text-base">
    {text}
  </p>
  <div class="relative w-full h-64 mt-10 overflow-hidden">
    <img
      src="/web.webp"
      alt="imagen"
      class="group-hover:scale-110 transition-transform duration-500 w-full h-full object-cover"
    />

    <!-- Gradiente arriba -->
    <div
      class="absolute top-0 left-0 w-full h-40 bg-gradient-to-b from-secondary to-transparent pointer-events-none"
    >
    </div>

    <!-- Gradiente abajo -->
    <div
      class="absolute bottom-0 left-0 w-full h-40 bg-gradient-to-t from-secondary to-transparent pointer-events-none"
    >
    </div>
  </div>
</div>
