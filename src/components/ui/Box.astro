---
interface Props {
  className?: string;
  text: string;
  title: string;
}
const { className, text, title } = Astro.props;
---

<div class={`overflow-hidden w-full p-4 ${className}`}>
  <div>
    <slot name="icon" />
  </div>
  <h3 class="text-xl font-inter font-bold uppercase text-title">
    {title}
  </h3>
  <p class="font-inter text-base text-subtitle">
    {text}
  </p>
</div>
