---
interface Props {
  className?: string;
  text: string;
  title: string;
}
const { className, text, title } = Astro.props;
---

<div
  class={` overflow-hidden w-full p-4 ${className} hover:scale-105 transition-transform duration-500`}
>
  <h3 class="text-xl font-inter font-bold uppercase">
    {title}
  </h3>
  <p class="font-inter text-base text-zinc-600">
    {text}
  </p>
</div>
