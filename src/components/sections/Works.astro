---
import { TrendingUp } from "@lucide/astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

interface Props {
  title: string;
  area: string;
  time: string;
  views: string;
  desktop: string;
  mobile: string;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { title, area, time, views, desktop, mobile }: Props = Astro.props;
---

<section class="container mx-auto">
  <div class="flex justify-center items-center mt-20">
    <div
      class="bg-secondary overflow-hidden w-full md:w-auto flex justify-center items-center gap-5 pt-5 px-3 md:pt-10 md:px-10 rounded-xl shadow-xl group"
    >
      <img
        src={desktop}
        alt="test"
        class="h-72 lg:h-[500px] aspect-auto rounded-t-md shadow-xl group-hover:rotate-0 rotate-2 transition-transform duration-300 cursor-grab"
        draggable="false"
      />
      <img
        src={mobile}
        alt="test"
        class="h-72 hidden md:block lg:h-[500px] aspect-auto rounded-t-md shadow-xl group-hover:rotate-0 rotate-2 transition-transform duration-300 cursor-grab"
        draggable="false"
      />
    </div>
  </div>
  <div
    class="flex flex-col md:flex-row justify-around items-center gap-5 w-full my-5"
  >
    <div class="flex justify-start">
      <h2 class="text-2xl md:text-4xl font-semibold text-center font-inter">
        {title}
      </h2>
    </div>
    <div class="flex justify-center flex-wrap">
      <ul class="flex justify-center items-center gap-5">
        <li class="flex flex-col font-inter">
          <span class="text-gray-500">{t("work.area")}</span>
          <p class="text-xl font-medium">{area}</p>
        </li>
        <li class="flex flex-col font-inter">
          <span class="text-gray-500">{t("work.time")}</span>
          <p class="text-xl font-medium">{time}</p>
        </li>
        <li class="flex flex-col font-inter">
          <span class="text-gray-500">{t("work.views")}</span>
          <p class="text-xl font-medium flex justify-center items-center gap-1">
            {views}
            <TrendingUp class="text-primary" />
          </p>
        </li>
      </ul>
    </div>
  </div>
</section>
