---
import { ArrowDownLeft } from "@lucide/astro";

const { item } = Astro.props;
---

<div>
  <div class="grid divide-y-2 divide-black/10 gap-5 mx-auto">
    {
      item?.map((faq: any) => (
        <div class="py-5 px-4">
          <details class="group">
            <summary class="flex justify-between items-center font-medium cursor-pointer list-none">
              <span class="font-inter">{faq.question}</span>
              <ArrowDownLeft class="transition duration-500 group-open:rotate-180" />
            </summary>
            <p class="text-neutral-600 font-inter mt-3 group-open:animate-fadeIn">
              {faq.answer}
            </p>
          </details>
        </div>
      ))
    }
  </div>
</div>
